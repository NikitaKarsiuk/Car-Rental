@using System.Security.Claims
@model CarRental.Models.Car

@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@Model.Name</h1>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Img" class="img-fluid rounded shadow" alt="@Model.Name" style="width: 100%; height: auto;">
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body">
                    <h3 class="card-title">Описание</h3>
                    <p class="card-text">@Model.LongDesc</p>
                    <hr>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>Цена:</strong> @Model.Price.ToString("N2") руб./сутки
                        </li>
                        <li class="list-group-item">
                            <strong>Категория:</strong> @Model.Category.Name
                        </li>
                        <li class="list-group-item">
                            <strong>Полное описание:</strong> @Model.LongDesc
                        </li>
                    </ul>

                    @if (Model.IsFavorite)
                    {
                        <div class="mt-3">
                            <span class="badge bg-warning text-dark">Избранное</span>
                        </div>
                    }

                    <div class="mt-4">
                        <a href="@Url.Action("Create", "Order", new { carId = Model.Id, userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value })" class="btn btn-primary btn-lg w-100">
                            Оставить заявку
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>